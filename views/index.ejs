<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Riddle App</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>

<body>
    <h1>Riddle Me Now <i>&nbsp;</i> <i class="fa-solid fa-puzzle-piece"></i></h1>
    <div>
        <h2>Your Riddle Is:</h2>
        <p>
            <%= riddle.riddle %>
        </p>

        <div id="eye-div" onclick="toggleAnswer()">
            <i id="eye" title="click to reveal the answer" class="fa-sharp fa-solid fa-eye fa-eye-slash"></i>
        </div>

        <div id="answerSection" style="display: none;">
            <h2>Answer Revealed To You:</h2>
            <p>
                <%= riddle.answer %>
            </p>
        </div>
    </div>

    <script>
        function toggleAnswer() {
            const answerSection = document.getElementById('answerSection');
            const eye = document.getElementById("eye");

            if (answerSection.style.display === 'none') {
                answerSection.style.display = 'block';
                eye.classList.remove("fa-eye");
                eye.classList.add("fa-eye-slash");
            } else {
                answerSection.style.display = 'none';
                eye.classList.add("fa-eye");
                eye.classList.remove("fa-eye-slash");
            }
        }

    </script>

</body>

</html>